<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vamsirao.videologin.MainActivity">

    <VideoView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/bgVideoView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="384dp"
        android:id="@+id/v_guideline2"
        app:layout_constraintGuide_begin="190dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="190dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="384dp"
        android:id="@+id/v_guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="401dp"
        app:layout_constraintGuide_end="191dp" />

    <android.support.constraint.Guideline
        android:layout_width="592dp"
        android:layout_height="wrap_content"
        android:id="@+id/h_guideline1"
        app:layout_constraintGuide_begin="228dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="228dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:text="SMS VERIFICATION"
        android:layout_width="0dp"
        android:id="@+id/sms_button"

        android:textColor="?android:attr/colorPressedHighlight"
        android:background="@drawable/rounded_edge"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/v_guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/h_guideline1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:alpha="0.80"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText"
        app:layout_constraintBottom_toTopOf="@+id/sms_button"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_guideline2"
        app:layout_constraintRight_toLeftOf="@+id/v_guideline3"
        app:layout_constraintTop_toTopOf="@+id/h_guideline1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:alpha="0.80"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/bgVideoView"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        android:alpha="0.90"
        app:layout_constraintLeft_toLeftOf="@+id/i1_guideline"
        app:layout_constraintRight_toLeftOf="@+id/i2_guideline2"
        android:background="@mipmap/ic_launcher" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="384dp"
        android:id="@+id/i1_guideline"
        app:layout_constraintGuide_begin="130dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="130dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="384dp"
        android:id="@+id/i2_guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="462dp"
        app:layout_constraintGuide_end="130dp" />

</android.support.constraint.ConstraintLayout>
